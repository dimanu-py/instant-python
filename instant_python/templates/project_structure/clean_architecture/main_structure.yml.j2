{% import "clean_architecture/layer_macros.j2" as layer with context %}
{# === Core Project Structure === #}
{{ layer.include_block("clean_architecture/source.yml.j2", 0) }}
{{ layer.include_block("clean_architecture/test.yml.j2", 0) }}

{# === Base Configuration Files === #}
{{ layer.include_block("pyproject.yml.j2", 0) }}
{{ layer.include_block("python_version.yml.j2", 0) }}
{{ layer.include_block("license.yml.j2", 0) }}

{# === CI/CD and Automation Features === #}
{% set ci_cd_features = [
    {"feature": "github_actions", "template": "github_action.yml.j2"},
    {"feature": "github_actions", "template": "makefile.yml.j2"},
    {"feature": "github_issues_template", "template": "github_issues_template.yml.j2"},
    {"feature": "makefile", "template": "makefile.yml.j2"},
    {"feature": "precommit_hook", "template": "precommit_hook.yml.j2"},
    {"feature": "precommit_hook", "template": "makefile.yml.j2"}
] %}
{{ layer.render_features(ci_cd_features, 0) }}

{# === Git Features === #}
{% if git.initialize %}
{{ layer.include_block("gitignore.yml.j2", 0) }}
{{ layer.include_block("readme.yml.j2", 0) }}
{% endif %}

{# === Testing and Type Checking === #}
{% if dependencies | has_dependency("pytest") %}
{{ layer.include_block("pytest.yml.j2", 0) }}
{% endif %}
{% if dependencies | has_dependency("mypy") %}
{{ layer.include_block("mypy.yml.j2", 0) }}
{% endif %}

{# === Database Migration === #}
{{ layer.render_feature_if_enabled("async_alembic", "persistence/async_alembic.yml.j2", 0) }}

{# === Documentation and Metadata === #}
{% set doc_features = [
    {"feature": "citation_file", "template": "citation.yml.j2"},
    {"feature": "security_file", "template": "security.yml.j2"}
] %}
{{ layer.render_features(doc_features, 0) }}
